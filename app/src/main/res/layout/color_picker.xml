<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/grey_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgColor1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:tint="#FFEB3B"
                app:srcCompat="@drawable/ic_icon_circle" />

            <ImageView
                android:id="@+id/imgColor2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="@android:color/holo_red_light" />

            <ImageView
                android:id="@+id/imgColor3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="@android:color/holo_purple" />

            <ImageView
                android:id="@+id/imgColor4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="@android:color/holo_blue_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgColor5"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="#3FB45D" />

            <ImageView
                android:id="@+id/imgColor6"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="#5D4037" />

            <ImageView
                android:id="@+id/imgColor7"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="@android:color/holo_orange_dark" />

            <ImageView
                android:id="@+id/imgColor8"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_icon_circle"
                app:tint="#FF4081" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>